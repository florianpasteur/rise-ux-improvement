{
  "manifest_version": 3,
  "name": "Rise UX Improvement Extension",
  "version": "1.1.5",
  "description": "Add functionalities to Rise to help navigate and use the site",
  "short_name": "Rise UX",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://rise.articulate.com/*"
      ],
      "js": [
        "contentscript.js"
      ],
      "css": [
        "style.css",
        "mvp.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "style.css"
      ],
      "matches": [],
      "extension_ids": [],
      "use_dynamic_url": false
    }
  ],
  "browser_action": {
    "default_title": "Settings",
    "default_popup": "popup.html",
    "default_icon": {
      "512": "icons/icon512.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "512": "icons/icon512.png",
    "128": "icons/icon128.png"
  }
}
